{
  "version": 2,
  "buildCommand": "npm run build:vercel",
  "outputDirectory": "dist/public",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=63072000; includeSubDomains; preload"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/:path(.*)",
      "has": [
        {
          "type": "header",
          "key": "x-forwarded-proto",
          "value": "http"
        }
      ],
      "destination": "https://property-manager-ke.vercel.app/:path*",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/api/units/:id",
      "destination": "/api/units/[id]"
    },
    {
      "source": "/api/payments/pesapal/:action",
      "destination": "/api/payments/pesapal/[action]"
    },
    {
      "source": "/api/tenants/me",
      "destination": "/api/tenants/me"
    },
    {
      "source": "/api/tenants/:id",
      "destination": "/api/tenants"
    },
    {
      "source": "/api/leases/:id",
      "destination": "/api/leases"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/process-emails",
      "schedule": "*/1 * * * *"
    },
    {
      "path": "/api/cron/process-sms",
      "schedule": "*/1 * * * *"
    },
    {
      "path": "/api/cron/generate-invoices",
      "schedule": "0 0 1 * *"
    }
  ]
}