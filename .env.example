# Supabase Configuration
# Get these from your Supabase project dashboard (Settings -> API)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Get this from Settings -> API -> JWT Settings
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_here

# Server Configuration
PORT=5000
NODE_ENV=development

# For Vercel deployment, set NODE_ENV=production

# Optional: Direct PostgreSQL connection string (usually not needed with Supabase)
# DATABASE_URL=postgresql://postgres:[password]@db.your-project.supabase.co:5432/postgres

# Optional: Email Configuration (if using email features)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASS=your_email_app_password

# Optional: Pesapal Integration (if using payment features)
# PESAPAL_CONSUMER_KEY=your_pesapal_consumer_key
# PESAPAL_CONSUMER_SECRET=your_pesapal_consumer_secret
# PESAPAL_BASE_URL=https://cybqa.pesapal.com/pesapalv3