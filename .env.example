# Supabase Configuration
# Get these from your Supabase project dashboard (Settings -> API)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Get this from Settings -> API -> JWT Settings
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_here

# Frontend Supabase Configuration (for Realtime features)
# These should match SUPABASE_URL and SUPABASE_ANON_KEY above
VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Server Configuration
PORT=5000
NODE_ENV=development

# Upstash Redis (for distributed rate limiting in production)
# Get these from https://console.upstash.com/ -> Your Database -> REST API
# Leave empty to use in-memory rate limiting (not recommended for production)
UPSTASH_REDIS_REST_URL=https://your-db.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_token_here

# For Vercel deployment, set NODE_ENV=production

# Optional: Direct PostgreSQL connection string (usually not needed with Supabase)
# DATABASE_URL=postgresql://postgres:[password]@db.your-project.supabase.co:5432/postgres

# Brevo Email Configuration (for tenant invitations and notifications)
# Get API key from: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=your_brevo_api_key_here
BREVO_SENDER_EMAIL=noreply@landeeandmoony.com
FRONTEND_URL=http://localhost:5000

# Optional: Pesapal Integration (if using payment features)
# PESAPAL_CONSUMER_KEY=your_pesapal_consumer_key
# PESAPAL_CONSUMER_SECRET=your_pesapal_consumer_secret
# PESAPAL_BASE_URL=https://cybqa.pesapal.com/pesapalv3